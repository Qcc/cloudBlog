extends header
block content
  include ./nav.jade
  div(class="ui grid")
    div(class="four wide column")
    div(class="eight wide column")
      form(class="ui form segment" action="signup" method="post" enctype="multipart/form-data")
        div(class="field required")
          label 用户名
          input(placeholder="用户名" type="text" name="name")
        div(class="field required")
          label 密码
          input(placeholder="密码" type="password" name="password")
        div(class="field required")
          label 重复密码
          input(placeholder="重复密码" type="password" name="repassword")
        div(class="field required")
          label 性别
          select(class="ui compact selection dropdown" name="gender")
            option(value="m")  男
            option(value="f")  女
            option(value="x")  保密
        div(class="field required")
          label 头像
          input(type="file" name="avatar")
        div(class="field required")
           label 个人简介
           textarea(name="bio" rows="5")
        input(type="submit" class="ui button fluid" value="注册")
